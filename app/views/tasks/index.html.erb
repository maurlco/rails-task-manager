<h1>Show my tasks</h1>



<% @tasks.each do |task|%>
  <% if task.completed %>
  <h2><i class="fas fa-check-square"></i><%= link_to task.title, task_path(task) %> .
    <%= link_to destroy_path(task), method: :delete, data: { confirm: "are you sure?"} do %>
      <i class="fas fa-trash-alt"></i>
      <% end %>
  </h2>
  <% else %>
  <h2><i class="far fa-square"></i><%= link_to task.title, task_path(task) %> .
    <%= link_to destroy_path(task), method: :delete do %>
      <i class="fas fa-trash-alt"></i>
      <% end %></h2>
  <% end %>
<% end %>

<%= link_to "create a new task", new_path %>
